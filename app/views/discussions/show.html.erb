<div class="container">
  <h1>Discussion: <%= @discussion.title %></h1>
  <h4>Description: <%= @discussion.description %></h4>
  <div class="well">
    <% @discussion.comments.each do |comment| %>
      <h3><%= comment.body %></h3>
      <h5><%= comment.created_at %></h5>
      <h5>Posted By: <%= comment.user.first_name %></h5>
      <%= link_to "Edit Comment", edit_project_discussion_comment_path(@project, @discussion, comment), class: "btn btn-primary btn-xs" %>
      <%= link_to "Abolish Comment", project_discussion_comment_path(@project, @discussion, comment), method: :delete, class: "btn btn-danger btn-xs" %>
    <% end %>
  </div>
</div>


<div class="container">
 <%= form_for @comment, url: project_discussion_comments_path(@project, @discussion) do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body, class:"form-control" %><br>
  <%= f.submit class: "btn btn-info btn-sm" %>
  <% end %>
</div>