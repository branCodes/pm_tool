<div class="container">
  <%= form_for [@project, @discussion] do |f| %>
    <%= f.label :title %>
    <%= f.text_area :title, class:"form-control" %><br>
    <%= f.label :description %>
    <%= f.text_field :description, class:"form-control"%><br>
    <%= f.submit class: "btn btn-info btn-sm" %>
  <% end %>
</div>