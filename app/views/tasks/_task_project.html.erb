 <div class="container">
  <div class="row">  
    <div class="col-md-6">
      <h2>Incomplete Tasks for: <%= @project.title %></h2>
      <div class="class-well">
        <% @tasks.each do |task| %>
          <% if task.status == false %>
            <%= render partial: 'tasks/task_row', locals: { task: task } %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6"> 
      <h2>Complete Tasks for: <%= @project.title %></h2>
      <div class="class-well">
        <% @tasks.each do |task| %>
          <% if task.status == true %>
            <%= render partial: 'tasks/task_row', locals: { task: task } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
<h2>Add New Task</h2>
<% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @task, url: project_tasks_path(@project), remote: true do |f| %>
  <%= f.label :title %>
  <%= f.text_area :title, class:"form-control" %><br>
  <%= f.label :due_date %>
  <%= f.date_field :due_date %>
  <%= f.submit class: "btn btn-info btn-sm" %>
<% end %>
</div>
<br>
<br>
<hr>

